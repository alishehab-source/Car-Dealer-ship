{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CarDealershipDB;Trusted_Connection=true;TrustServerCertificate=true;",
    "SqlServerConnection": "Server=localhost,1433;Database=CarDealershipDB;User Id=sa;Password=YourPassword123;TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://localhost:7000"
    ]
  },
  "JWT": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32Characters!",
    "Issuer": "CarDealershipAPI",
    "Audience": "CarDealershipClient",
    "ExpiryInHours": 24
  },
  "ApiSettings": {
    "Version": "v1",
    "Title": "Car Dealership API",
    "Description": "API for managing car dealership operations",
    "ContactEmail": "admin@dealership.com",
    "EnableSwagger": true,
    "MaxPageSize": 100,
    "DefaultPageSize": 10
  },
  "FileUpload": {
    "MaxFileSize": 5242880,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".pdf" ],
    "UploadPath": "wwwroot/uploads/"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "FromEmail": "noreply@dealership.com",
    "FromName": "Car Dealership System"
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "SlidingExpirationMinutes": 30
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "RequestsPerMinute": 60,
    "BurstLimit": 10
  }
}